# create a new post

printf "Title: "
read -r title

printf "Tags (csv): "
read -r tags

titleForFile=$(echo "$title" | 
	sed 's/[ ?<>*=!'\'']/-/g' | 
	sed -E 's/-+/-/g' | sed -E 's/-$//g')

cat >_drafts/date-$titleForFile.md <<EOL
---
title: "$title"
layout: post
tags: [$tags]
date: date-placeholder
---
EOL

echo "_drafts/date-$titleForFile.md" | pbcopy
echo "created $titleForFile and put path to clipboard"

