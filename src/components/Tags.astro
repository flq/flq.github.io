---
interface Props {
    tags: string[];
    class?: string;
}

const { tags, class: className } = Astro.props;
---

<style>
    nav {
        margin-top: 0.5rem;
    }

    .outer {
        display: inline-flex;
        margin: 0;
        margin-right: 0.5rem;
        margin-bottom: 0.5rem;
        padding: 0;
        line-height: 1.1rem;
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
        box-shadow: 5px 5px 8px -8px rgba(0, 0, 0, 0.91);
    }

    .outer:hover {
        text-shadow: var(--linkHoverHighlight);
    }

    a {
        background-color: var(--linkColor);
        color: var(--linkColorMainContrast);
        text-decoration: none;
        font-size: 1.1rem;
        margin-top: 0;
        padding: 0.25rem;
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
    }

    a::after {
        margin-left: 0.75rem;
        font-size: 1.5rem;
        vertical-align: baseline;
        content: "â€¢";
    }
</style>

<nav class={className}>
    {
        tags.map((tag) => (
            <div class="outer">
                <a href={`/tags/${tag}`}>{tag}</a>
            </div>
        ))
    }
</nav>
